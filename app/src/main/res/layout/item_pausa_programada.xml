<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_option_white_rounded"
    android:gravity="center_vertical"
    android:elevation="2dp">

    <!-- Icono del Tipo de Pausa -->
    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_icon_circle">

        <ImageView
            android:id="@+id/iv_pausa_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_eye"
            android:contentDescription="Tipo de pausa" />
    </FrameLayout>

    <!-- Informaci贸n (Hora y Tipo) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hora_programada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:30 PM"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_tipo_pausa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descanso visual"
            android:textSize="14sp"
            android:textColor="@color/gray_subtitle" />
    </LinearLayout>

    <!-- Botones de Acci贸n (Editar y Eliminar) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Bot贸n Editar -->
        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_pausaactiva_edit"
            android:contentDescription="Editar" />

        <!-- Bot贸n Eliminar -->
        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_pausaactiva_delete"
            android:contentDescription="Eliminar" />
    </LinearLayout>

</LinearLayout>