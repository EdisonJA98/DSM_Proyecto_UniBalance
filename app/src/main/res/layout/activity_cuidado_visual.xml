<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo_general"
    tools:context=".ui.activebreak.eyecare.CuidadoVisualActivity">

    <!-- Fondo turquesa inferior -->
    <View
        android:id="@+id/bottom_bar_bg"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/color_accent_primary"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Botones de Cabecera -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_icon_circle"
        android:elevation="4dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/black"
        android:contentDescription="Botón de retroceso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_help"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_icon_circle"
        android:elevation="4dp"
        android:src="@drawable/ic_help"
        app:tint="@color/black"
        android:contentDescription="Botón de ayuda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/tv_title_ejercicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="Movimiento Ocular"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/bg_rounded_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Instrucción -->
    <TextView
        android:id="@+id/tv_instruccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Mueve los ojos siguiendo la dirección indicada\nsin mover la cabeza"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_ejercicio" />

    <!-- 4. Área Central de Animación (Ojo Compuesto por Capas) -->
    <!-- CAMBIO CLAVE: Usamos FrameLayout en lugar de un simple ImageView -->
    <FrameLayout
        android:id="@+id/contenedor_ojo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_eye_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_instruccion">

        <!-- CAPA 1: La Pupila Móvil (Centrada inicialmente) -->
        <!-- Esta es la vista que vamos a mover con código Kotlin (translationX/Y) -->
        <ImageView
            android:id="@+id/iv_pupila_movil"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_pupila_completa"
            tools:ignore="ContentDescription" />

        <!-- CAPA 2: El Contorno (Párpados) Estático encima -->
        <!-- Esta capa se queda quieta y da la forma de ojo -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_contorno_ojo"
            android:padding="10dp"
            tools:ignore="ContentDescription" />

    </FrameLayout>

    <!-- Temporizador -->
    <LinearLayout
        android:id="@+id/timer_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contenedor_ojo">

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:20"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="minutos        seg"
            android:textSize="14sp"
            android:textColor="@color/gray_subtitle"/>

    </LinearLayout>

    <!-- Controles -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btn_pause_play"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/bg_control_circle"
            android:src="@drawable/ic_pause"
            app:tint="@color/black"
            android:contentDescription="Botón de pausa/play" />

        <ImageButton
            android:id="@+id/btn_restart"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_control_circle"
            android:src="@drawable/ic_restart"
            app:tint="@color/black"
            android:contentDescription="Botón de reiniciar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>