<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo_general"
    tools:context=".ui.activebreak.PausasActivasActivity">

    <!-- Botones de Cabecera -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_icon_circle"
        android:elevation="4dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/black"
        android:contentDescription="BotÃ³n de retroceso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="Pausas Activas de\nBienestar"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/bg_rounded_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp" />

    <!-- SubtÃ­tulo -->
    <TextView
        android:id="@+id/tv_choose_descanso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Elige tu descanso ideal"
        android:textColor="@color/gray_subtitle"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header_title" />

    <!-- Opciones (Estiramiento y Visual) -->
    <LinearLayout
        android:id="@+id/options_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_choose_descanso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include
            android:id="@+id/option_estiramiento"
            layout="@layout/item_pausa_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <include
            android:id="@+id/option_descanso_visual"
            layout="@layout/item_pausa_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- ðŸ’¡ CAMBIO: Contenedor de Botones Inferiores (Programar y Ver) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- BotÃ³n 1: Programar Nueva (Turquesa) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_programar_nueva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Programar pausa activa"
            android:textSize="16sp"
            android:padding="12dp"
            android:textColor="@color/black"
            android:background="@drawable/bg_rounded_button"
            android:layout_marginBottom="12dp"/>

        <!-- BotÃ³n 2: Ver Programadas -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ver_programadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver pausas programadas"
            android:textSize="16sp"
            android:padding="12dp"
            android:textColor="@color/black"
            android:background="@drawable/bg_button_gray"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>