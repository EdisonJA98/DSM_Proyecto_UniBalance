<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo_general">

    <!-- Botón de Retroceso -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_icon_circle"
        android:elevation="4dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/black"
        android:contentDescription="Volver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="Elige el tiempo a\nprogramar"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/bg_rounded_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back" />

    <!-- Opciones de Tiempo (RadioGroup) -->
    <RadioGroup
        android:id="@+id/rg_time_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Opción 1 min -->
        <RadioButton
            android:id="@+id/rb_1_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 minuto"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="22dp"
            android:layout_marginBottom="16dp"
            android:buttonTint="@color/color_accent_primary"
            android:background="@drawable/bg_radio_option_selector" /> <!-- Padding aumentado a 22dp -->

        <!-- Opción 3 min -->
        <RadioButton
            android:id="@+id/rb_3_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 minutos"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="22dp"
            android:layout_marginBottom="16dp"
            android:buttonTint="@color/color_accent_primary"
            android:background="@drawable/bg_radio_option_selector" /> <!-- Padding aumentado a 22dp -->

        <!-- Opción 5 min -->
        <RadioButton
            android:id="@+id/rb_5_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5 minutos"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="22dp"
            android:layout_marginBottom="16dp"
            android:buttonTint="@color/color_accent_primary"
            android:background="@drawable/bg_radio_option_selector" /> <!-- Padding aumentado a 22dp -->

    </RadioGroup>

    <!-- Botón Siguiente -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="32dp"
        android:text="Elegir pausa activa"
        android:textSize="18sp"
        android:padding="12dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_rounded_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>