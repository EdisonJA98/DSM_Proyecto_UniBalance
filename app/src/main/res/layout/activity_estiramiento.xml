<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo_general"
    tools:context=".ui.activebreak.stretchingexercises.EstiramientoActivity"> <!-- Contexto actualizado -->

    <!-- Fondo turquesa inferior (barra que sube desde abajo) -->
    <View
        android:id="@+id/bottom_bar_bg"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/color_accent_primary"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- 1. Botones de Cabecera (Retroceso y Ayuda) -->
    <!-- Botón de Retroceso (Reutiliza bg_icon_circle, ic_arrow_back) -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_icon_circle"
        android:elevation="4dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/black"
        android:contentDescription="Botón de retroceso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón de Ayuda (Reutiliza bg_icon_circle, ic_help) -->
    <ImageButton
        android:id="@+id/btn_help"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_icon_circle"
        android:elevation="4dp"
        android:src="@drawable/ic_help"
        app:tint="@color/black"
        android:contentDescription="Botón de ayuda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 2. Título "Flexión hacia adelante" -->
    <TextView
        android:id="@+id/tv_title_ejercicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="Flexion lateral de torso"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/bg_rounded_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 3. Instrucción de Texto -->
    <TextView
        android:id="@+id/tv_instruccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Inclina tu torso hacia un lado suavemente durante 10 segundos"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_ejercicio" />

    <!-- 4. Área Central de Guía de Estiramiento (Secuencia de Imágenes) -->
    <LinearLayout
        android:id="@+id/animation_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_instruccion">

        <!-- Imagen del Paso 1 (Izquierda) - Inicialmente ACTIVO -->
        <ImageView
            android:id="@+id/iv_paso_izquierdo"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:padding="16dp"
            android:background="@drawable/bg_paso_activo"
            android:src="@drawable/pa_rutina_estiramiento_paso1_izq"
            android:contentDescription="Paso izquierdo del estiramiento"
            android:scaleType="fitCenter"/>

        <!-- Imagen del Paso 2 (Derecha) - Inicialmente INACTIVO -->
        <ImageView
            android:id="@+id/iv_paso_derecho"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:padding="16dp"
            android:background="@drawable/bg_paso_inactivo"
            android:src="@drawable/pa_rutina_estiramiento_paso2_der"
            android:contentDescription="Paso derecho del estiramiento"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <!-- 5. Temporizador y Controles (Reutiliza la lógica de Cuidado Visual) -->

    <LinearLayout
        android:id="@+id/timer_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animation_container">

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:20"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="minutos        seg"
            android:textSize="14sp"
            android:textColor="@color/gray_subtitle"/>

    </LinearLayout>

    <!-- Controles (Pausa y Reinicio - Reutiliza bg_control_circle, ic_pause, ic_restart) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btn_pause_play"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/bg_control_circle"
            android:src="@drawable/ic_pause"
            app:tint="@color/black"
            android:contentDescription="Botón de pausa/play" />

        <ImageButton
            android:id="@+id/btn_restart"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_control_circle"
            android:src="@drawable/ic_restart"
            app:tint="@color/black"
            android:contentDescription="Botón de reiniciar" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>