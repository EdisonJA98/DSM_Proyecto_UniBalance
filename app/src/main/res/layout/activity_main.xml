<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo_general"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_title_unibalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UniBalance"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/color_text_title"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_subtitle_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Herramientas para mejorar tu bienestar mental y cognitivo"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"/>

        <include
            android:id="@+id/option_trivia"
            layout="@layout/item_menu_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <include
            android:id="@+id/option_lectura"
            layout="@layout/item_menu_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <include
            android:id="@+id/option_respiracion"
            layout="@layout/item_menu_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <include
            android:id="@+id/option_pausas"
            layout="@layout/item_menu_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <include
            android:id="@+id/option_emocional"
            layout="@layout/item_menu_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <include
            android:id="@+id/option_exposicion"
            layout="@layout/item_menu_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</ScrollView>