<?xml version="1.0" encoding="utf-8"?>
<!-- Contenedor principal para toda la actividad -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo_general"
    tools:context=".ui.emotions.RegistroEmocionalActivity">

    <!-- 1. HEADER (Bot칩n de retroceso, T칤tulo, Iconos de Ayuda/Estad칤sticas) -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="32dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Bot칩n de Retroceder -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@android:color/transparent"
            app:tint="@color/color_primary_emotion"
            android:contentDescription="Bot칩n para retroceder" />

        <!-- T칤tulo -->
        <TextView
            android:id="@+id/tv_activity_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mis Emociones"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center" />

        <!-- Iconos de Ayuda y Estad칤sticas (Requieren Drawables) -->
        <ImageButton
            android:id="@+id/btn_help"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_help"
            android:background="@android:color/transparent"
            app:tint="@color/color_primary_emotion"
            android:contentDescription="Bot칩n de ayuda" />

        <ImageButton
            android:id="@+id/btn_stats"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_stats_chart"
            android:background="@android:color/transparent"
            app:tint="@color/color_primary_emotion"
            android:contentDescription="Bot칩n de estad칤sticas" />

    </LinearLayout>

    <!-- 2. CONTENIDO PRINCIPAL (Scrollable) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Gu칤a de Texto -->
            <TextView
                android:id="@+id/tv_guide_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="쮺칩mo te sientes hoy?"
                android:textSize="16sp"
                android:textColor="@color/gray_subtitle"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- 3. CUADR칈CULA DE EMOCIONES (2x3) -->
            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/grid_emojis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:columnCount="2"
                app:rowCount="3"
                android:paddingBottom="24dp"
                android:layout_gravity="center_horizontal">

                <!-- Botones de Emoji Incluidos (todos usan la misma plantilla) -->

                <include
                    android:id="@+id/btn_emoji_very_happy"
                    layout="@layout/item_emoji_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    android:layout_margin="8dp" />

                <include
                    android:id="@+id/btn_emoji_happy"
                    layout="@layout/item_emoji_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    android:layout_margin="8dp" />

                <include
                    android:id="@+id/btn_emoji_neutral"
                    layout="@layout/item_emoji_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    android:layout_margin="8dp" />

                <include
                    android:id="@+id/btn_emoji_worried"
                    layout="@layout/item_emoji_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    android:layout_margin="8dp" />

                <include
                    android:id="@+id/btn_emoji_angry"
                    layout="@layout/item_emoji_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    android:layout_margin="8dp" />

                <include
                    android:id="@+id/btn_emoji_tired"
                    layout="@layout/item_emoji_button"
                    android:layout_width="0dp"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp" />

            </androidx.gridlayout.widget.GridLayout>


            <!-- 4. FEEDBACK INMEDIATO (Oculto por defecto) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardBackgroundColor="@color/color_feedback_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <!-- Emoji de Feedback -->
                    <TextView
                        android:id="@+id/tv_feedback_emoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="48sp"
                        android:text="游땏"
                        android:padding="8dp"/>

                    <!-- Texto de Retroalimentaci칩n -->
                    <TextView
                        android:id="@+id/tv_feedback_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="춰Genial! Sigue as칤."
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 5. BOTONES DE ACCI칍N (Ocultos por defecto) -->
            <Button
                android:id="@+id/btn_resources"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recursos de apoyo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/color_critical_accent"
                android:padding="14dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar emoci칩n"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/color_primary_emotion"
                android:padding="14dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>