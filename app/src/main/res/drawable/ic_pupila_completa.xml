<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- IRIS (Círculo Turquesa) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/color_accent_primary"/>
            <size android:width="60dp" android:height="60dp"/>
        </shape>
    </item>

    <!-- PUPILA (Círculo Negro, más pequeño y centrado) -->
    <item android:top="15dp" android:bottom="15dp"
        android:left="15dp" android:right="15dp">
        <shape android:shape="oval">
            <solid android:color="@color/black"/>
        </shape>
    </item>

    <!-- BRILLO (Pequeño punto blanco, opcional) -->
    <item android:top="20dp" android:bottom="32dp"
        android:left="32dp" android:right="20dp">
        <shape android:shape="oval">
            <solid android:color="@color/white"/>
        </shape>
    </item>
</layer-list>