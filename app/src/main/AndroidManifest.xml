        android:theme="@style/Theme.DSMProyecto"
        tools:targetApi="31">

        <receiver android:name=".ui.activebreak.scheduler.NotificationReceiver" />

        <activity
            android:name=".ui.activebreak.scheduler.ProgramarPausaCompletaActivity"
            android:exported="false">
